<%- include('../layouts/header') %>
    <div class="container form-container">
        <h1 class="title">Register</h1>
        <form class="validated-form" action="/register" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username"
                    placeholder="Please enter username here" autofocus="autofocus" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" placeholder="Please enter email here"
                    required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required>
            </div>
            <button class="btn btn-success">Register</button>
        </form>
    </div>

    <%- include('../layouts/footer') %>
<%- include('../layouts/header') %>

    <div class="row  m-3">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= camp.image %>" class="card-img-top" alt="camp-pic">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">
                        Submitted by <%= camp.author.username %>
                    </li>
                    <li class="list-group-item">$<%= camp.price %>/night</li>
                </ul>
                <% if (currentUser && camp.author.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/campgrounds/<%= camp._id %>/edit">Edit campground</a>
                        <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                            <button class="card-link btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>

            </div>
        </div>
        <div class="col-6">
            <% if (currentUser) { %>
                <h2>Leave a Review</h2>
                <form class="mb-3 validated-form" action="/campgrounds/<%= camp._id %>/reviews" method="POST"
                    novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="invalid-feedback">Please put something for your review.</div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% } %>
                    <% for( review of camp.reviews) { %>
                        <div class="mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Rating: <%= review.rating %>/5
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %>
                                </h6>
                                <p class="card-text">
                                    <%= review.body %>
                                </p>
                                <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                                    <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
                                        method="post">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>

                            </div>
                        </div>

                        <% } %>


        </div>
    </div>

    <%- include('../layouts/footer') %>
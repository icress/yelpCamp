<%- include('../layouts/header') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= camp.image %>" class="card-img-top" alt="camp-pic">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">$<%= camp.price %>/night</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%= camp._id %>/edit">Edit campground</a>
                    <form class="d-inline" action="/campground/<%= camp._id %>?_method=DELETE" method="POST">
                        <button class="card-link btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <h2>Leave a Review</h2>
            <form class="mb-3 validated-form" action="/campgrounds/<%= camp._id %>/reviews" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="invalid-feedback">Please put something for your review.</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>

<%- include('../layouts/footer') %>
<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/header') %>
<div class="container">
    <h1 class="title">All Campgrounds</h1>
        <% for( let campground of campgrounds ) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="camp-pic">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text"><small><%= campground.location %></small></p>
                        </div>

                    </div>
                </div>
            </div>
            <% } %>
</div>
    
    <%- include('../layouts/footer') %>
